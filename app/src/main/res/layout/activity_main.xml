<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/llComponentesDu"
        android:layout_width="wrap_content"
        android:layout_height="262dp"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="70dp"
            android:text="Distribución Uniforme"
            android:textColor="@android:color/background_light"
            android:textSize="22dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Variable observada "
            android:textColor="@android:color/background_light"
            android:textSize="12dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et1"
            android:layout_width="345dp"
            android:layout_height="wrap_content"
            android:hint="Inserte variable"
            android:inputType="text"
            android:textSize="14dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Mínimo "
                android:textColor="@android:color/background_light"
                android:textSize="12dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et2"
                android:layout_width="64dp"
                android:layout_height="45dp"
                android:inputType="number"
                android:textSize="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Maximo "
                android:textColor="@android:color/background_light"
                android:textSize="12dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et3"
                android:layout_width="64dp"
                android:layout_height="45dp"
                android:inputType="number"
                android:textSize="12dp" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:text="Repeticiones"
            android:textColor="?attr/colorError"
            android:textSize="12dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et4"
            android:layout_width="334dp"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:hint="Inserte numero"
            android:inputType="number"
            android:textSize="12dp" />

    </LinearLayout>

    <Button
        android:layout_width="288dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="96dp"
        android:background="#4b93e1"
        android:onClick="recuperarDatosFormulario"
        android:text="CALCULAR RESULTADOS"
        android:textColor="@android:color/white"
        android:textSize="18dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="126dp"
        android:layout_height="107dp"
        android:layout_above="@+id/llComponentesDu"
        android:layout_centerHorizontal="true"
        app:srcCompat="@android:drawable/ic_menu_preferences" />

</RelativeLayout>